<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.x64.whackamole.MainActivity"
    android:background="@drawable/bg">

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole1"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hole2"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole2"
        android:scaleType="centerInside"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="208dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintRight_toLeftOf="@+id/hole3"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/hole1"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole3"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.96"
        app:layout_constraintTop_toTopOf="@+id/hole2"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole5"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/hole2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/hole2"
        app:layout_constraintRight_toRightOf="@+id/hole2"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole4"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/hole1"
        app:layout_constraintLeft_toLeftOf="@+id/hole1"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole6"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/hole3"
        app:layout_constraintRight_toRightOf="@+id/hole3"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole8"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/hole5"
        app:layout_constraintRight_toRightOf="@+id/hole5"
        app:layout_constraintLeft_toLeftOf="@+id/hole5"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole7"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@+id/hole4"
        app:layout_constraintLeft_toLeftOf="@+id/hole4"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ImageButton
        app:srcCompat="@drawable/hole2"
        android:id="@+id/hole9"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toBottomOf="@+id/hole6"
        app:layout_constraintRight_toRightOf="@+id/hole6"
        android:layout_height="110dp"
        android:layout_width="125dp" />

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:id="@+id/progressBar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:max="30000"
        android:progress="30000"
        android:maxHeight="100dp"
        android:minHeight="100dp"
        android:progressTint="@android:color/holo_orange_light"
        android:layout_height="110dp"
        android:progressTintMode="src_over"
        android:scaleY="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:id="@+id/score_txt"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textSize="60sp"
        app:layout_constraintLeft_toLeftOf="@+id/progressBar" />

</android.support.constraint.ConstraintLayout>
